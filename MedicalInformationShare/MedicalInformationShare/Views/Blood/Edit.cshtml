@model MedicalInformationShare.Models.Blood

@{
    ViewBag.Title = "Edit";
}
<div class="center-side" style="padding: 20px; text-align: center;">
    <h2>Edit Info</h2>
    <hr/>
    
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">


                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)
                <table style="margin: 45px auto;">
                    <tr>
                        <td>@Html.LabelFor(model => model.BloodGroup, new {@class = "control-label"})</td>
                        <td>
                            @Html.TextBoxFor(model => model.BloodGroup, new {@class = "form-control"})

                            @Html.ValidationMessageFor(model => model.BloodGroup)
                        </td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.AvailableBag, new {@class = "control-label"})</td>
                        <td>
                            @Html.TextBoxFor(model => model.AvailableBag, new {@class = "form-control"})
                            @Html.ValidationMessageFor(model => model.AvailableBag)
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><input style="margin: 30px 0 10px 0;" type="submit" value="Save" class="btn btn-success createbtn"/></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>@Html.ActionLink("Back to List", "Blood", "Blood", null, new {@class = "btn btn-primary createbtn"})</td>
                    </tr>
                </table>

            </div>
        }
    


    </div>