@model MedicalInformationShare.Models.Medicine

@{
    ViewBag.Title = "Edit";
}
<div class="center-side" style="padding: 20px; text-align: center;">
    <h2>Edit Info</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)

            <table style="margin: 45px auto;">
                <tr>
                    <td style="text-align: left;">
                        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </td>
                </tr>
                <tr>
                    <td style="text-align: left;">@Html.LabelFor(model => model.Measurement, new { @class = "control-label" })</td>
                    <td>

                        @Html.TextBoxFor(model => model.Measurement, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Measurement)
                    </td>
                </tr>
                <tr>
                    <td style="text-align: left;">@Html.LabelFor(model => model.Company, new { @class = "control-label" })</td>
                    <td>

                        @Html.TextBoxFor(model => model.Company, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Company)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><input style="margin: 30px 0 10px 0;" type="submit" value="Save" class="btn btn-success createbtn" /></td>
                </tr>
                <tr>
                    <td></td>
                    <td>@Html.ActionLink("Back to List", "MedicineIndex", "Medicine", null, new { @class = "btn btn-primary createbtn" })</td>
                </tr>
            </table>
        </div>
    }

   
</div>